@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>
                @*@Html.ActionLink("Tài khoản:  " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })*@
                <a class="dropdown-toggle waves-effect" data-toggle="dropdown" href="#">@Html.Raw(User.Identity.GetUserName()) <span class="caret"></span></a>
                <ul class="dropdown-menu">
                    <li><a href="/quan-ly-tai-khoan"><i class="glyphicon glyphicon-user"></i> Thay đổi thông tin tài khoản</a></li>
                    <li><a href="/thong-tin-doanh-nghiep"><i class="glyphicon glyphicon-asterisk"></i> Thông tin doanh nghiệp</a></li>
                    <li><a href="javascript:document.getElementById('logoutForm').submit()"><i class="glyphicon glyphicon-log-out"></i> Thoát</a></li>
                </ul>
            </li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a data-target="#modalRegister" data-toggle="modal" href="#" id="registerLink">Đăng ký</a></li>
        <li><a data-target="#modalLogin" data-toggle="modal" href="#" id="loginLink">Đăng nhập</a></li>
    </ul>
}

<div id="modalLogin" class="modal fade in" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Đăng nhập tài khoản</h4>
            </div>
            <div class="modal-body">
                @Html.Action("Login", "Account")
            </div>
        </div>
    </div>
</div>

<div id="modalRegister" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Đăng ký thành viên</h4>
            </div>
            <div class="modal-body">
                @Html.Action("Register", "Account")
            </div>
        </div>
    </div>
</div>
