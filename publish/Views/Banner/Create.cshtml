@model Portal.Core.Database.Banner

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm("Create", "Banner", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div>
            <h3 style="display: inline-block;">Tạo mới banner</h3>
            <p class="pull-right">
                @Html.ActionLink("Quay lại danh mục", "Index", null, new { @class = "btn btn-sm btn-default" })
            </p>
        </div>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            <div class="form-group">
                <label class="control-label col-md-2" for="Name">Tên banner</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Name)
                    @Html.ValidationMessageFor(model => model.Name)
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2" for="ImageBanner">Ảnh banner</label>
                <div class="col-md-10">
                    <input type="file" id="ImageBanner" name="uploadFile" />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2" for="SortOrder">Thứ tự</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SortOrder)
                    @Html.ValidationMessageFor(model => model.SortOrder)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Tạo mới" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </div>
}