@using Portal.CMS.Models
@model Portal.CMS.Models.RegisterViewModel
@{
    Layout = "~/Views/Shared/_LayoutCustom.cshtml";
    ViewBag.Title = "Đăng ký thành viên";
}
<div id="login-panel-wrapper">
    <div id="login-panel" class="panel-group">
        <div class="panel panel-default center">
            <div class="panel-heading">
                <img alt="Mạng việc làm và tuyển dụng nguồn nhân lực cao tại Việt Nam - ZODY" src="~/Images/logo.png" />
            </div>
            <div class="panel-body">
                <span class="light-300" style="font-size:14px">Đăng nhập hoặc đăng ký thành viên nhanh bằng tài khoản</span>
                <div class="row">
                    <div class="social-row">
                        @Html.Partial("_ExternalLoginsListPartial", new ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl })
                    </div>
                </div>
                <div style="width: 100%;height: 11px;border-bottom: 1px solid #ddd;margin: 20px 0;">
                    <span style="font-size: 13px; background-color: #FFF; padding: 0 10px;color: #aaa;">Đăng ký tài khoản ZODY</span>
                </div>
                @using (Html.BeginForm("Register", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form", name = "registerForm", @class = "form-horizontal" }))
                    {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <div class="input-field col-md-12">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Nhập địa chỉ email của bạn", required = "", ng_model = "userData.Email", type = "email", name = "Email", id = "email", autofocus = "0" })

                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-field col-md-12">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Nhập mật khẩu", required = "", name = "Password", type = "password", ng_model = "userData.Password", id = "password" })

                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-field col-md-12">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Nhập xác nhận mật khẩu", required = "", name = "ConfirmPassword", type = "password", ng_model = "userData.ConfirmPassword", id = "confirmPassword" })

                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-field col-md-12">
                            @Html.DropDownListFor(model => model.Role, new List<SelectListItem>
                                    {
                                    new SelectListItem() {Text = "Bạn là người tìm việc", Value= "1"},
                                    new SelectListItem() {Text = "Bạn là nhà tuyển dụng", Value= "2"}
                                    }, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12 right">
                            <input type="submit" value="ĐĂNG KÝ" class="btn btn-primary" />
                        </div>
                    </div>
                    }
            </div>
        </div>
    </div>

    @Html.ActionLink("Bạn quên mật khẩu?", "ForgotPassword", "Account", null, new { @class = "text-white" })

    <div class="copyright-text">&copy; 2016 <strong>ZODY</strong>. Mạng tuyển dụng trực tuyến Việt Nam</div>
</div>
