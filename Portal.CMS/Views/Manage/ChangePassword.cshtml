@model Portal.CMS.Models.ChangePasswordViewModel
@{
    Layout = "~/Views/Shared/_LayoutCustom.cshtml";
    ViewBag.Title = "Quản lý tài khoản";
}

<div id="login-panel-wrapper">
    <div id="login-panel" class="panel-group">
        <div class="panel panel-default center">
            <div class="panel-heading">
                <img alt="Mạng việc làm và tuyển dụng nguồn nhân lực cao tại Việt Nam - ZODY" src="~/Images/logo.png" />
            </div>
            <div class="panel-body">
                <span class="light-300" style="font-size:13px">Thông tin tài khoản trên ZODY</span>
                <div style="width: 100%;height: 11px;border-bottom: 1px solid #ddd;margin: 20px 0;">
                    <span style="font-size: 12px; background-color: #FFF; padding: 0 10px;color: #aaa;">Thay đổi mật khẩu</span>
                </div>

                @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="form-group">
                        <div class="input-field col-md-12">
                            @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control", @placeholder = "Nhập mật khẩu hiện tại" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-field col-md-12">
                            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", @placeholder = "Nhập mật khẩu mới" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-field col-md-12">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Nhập lại mật khẩu mới" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-12 right">
                            <input type="submit" value="THAY ĐỔI" class="btn btn-primary" />
                        </div>
                    </div>
                }
                <div style="width: 100%;height: 11px;border-bottom: 1px solid #ddd;margin: 20px 0;">
                    <span style="font-size: 12px; background-color: #FFF; padding: 0 10px;color: #aaa;">Thay đổi loại tài khoản</span>
                </div>

                @using (Html.BeginForm("ChangeAccountType", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="form-group">
                        <div class="input-field col-md-12">
                            @Html.DropDownListFor(model => model.Role, new List<SelectListItem>
                                    {
                                    new SelectListItem() {Text = "Bạn là người tìm việc", Value= "1"},
                                    new SelectListItem() {Text = "Bạn là nhà tuyển dụng", Value= "2"}
                                    }, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-12 right">
                            <input type="submit" value="THAY ĐỔI" class="btn btn-primary" />
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>


    <div class="copyright-text">&copy; 2016 <strong>ZODY</strong>. Mạng tuyển dụng trực tuyến Việt Nam</div>
</div>